<section class="flex flex-col md:flex-row container mx-auto p-4 items-center">
  <div class="flex gap-10 w-2/3">
    <button <% if (folder.parentFolderId) { %>
      onclick="location.href='/upload/<%=folder.parentFolderId%>'" <% } %>
      class="justify-center items-center cursor-pointer hover:bg-white/10
      rounded-lg w-10 h-10 transition-colors hidden md:inline-flex" >

      <svg
        xmlns="http://www.w3.org/2000/svg"
        fill="none"
        viewBox="0 0 24 24"
        stroke-width="1.5"
        stroke="currentColor"
        class="size-6"
      >
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          d="M15.75 19.5 8.25 12l7.5-7.5"
        />
      </svg>
    </button>
    <span class="text-2xl"><%= folder.name %></span>
  </div>
  <div
    class="flex justify-end md:justify-center items-center w-full gap-4 my-2"
  >
    <!-- Create Folder modal -->
    <div
      id="default-modal"
      tabindex="-1"
      aria-hidden="true"
      class="hidden overflow-y-auto overflow-x-hidden fixed top-0 right-0 left-0 z-50 justify-center items-center w-full md:inset-0 h-[calc(100%-1rem)] max-h-full"
    >
      <div class="relative p-4 w-full max-w-lg max-h-full">
        <!-- Modal content -->
        <div class="relative bg-dark rounded-lg">
          <!-- Modal header -->
          <div
            class="flex items-center justify-between p-4 md:p-5 border-b rounded-t dark:border-gray-600"
          >
            <h3 class="text-xl font-semibold text-white">Create Folder</h3>
            <button
              type="button"
              class="text-gray-400 bg-transparent hover:bg-white/25 hover:text-white rounded-lg text-sm w-8 h-8 ms-auto inline-flex justify-center items-center cursor-pointer"
              data-modal-hide="default-modal"
            >
              <svg
                class="w-3 h-3"
                aria-hidden="true"
                xmlns="http://www.w3.org/2000/svg"
                fill="none"
                viewBox="0 0 14 14"
              >
                <path
                  stroke="currentColor"
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="m1 1 6 6m0 0 6 6M7 7l6-6M7 7l-6 6"
                />
              </svg>
              <span class="sr-only">Close modal</span>
            </button>
          </div>
          <!-- Modal body -->
          <form action="/folder" method="post">
            <div class="p-4 md:p-5 space-y-4">
              <input
                type="text"
                name="folderName"
                class="input"
                placeholder="Enter folder name"
                required
              />
              <input hidden name="parentFolderId" value="<%= folder.id %>" />
            </div>
            <!-- Modal footer -->
            <div
              class="flex items-center p-4 md:p-5 border-t border-gray-600 rounded-b"
            >
              <button
                type="submit"
                class="text-white bg-primary hover:bg-secondary focus:ring-4 focus:outline-none focus:ring-secondary font-medium rounded-md text-sm px-5 py-2.5 text-center cursor-pointer"
              >
                Create Folder
              </button>
              <button
                data-modal-hide="default-modal"
                type="button"
                class="py-2.5 px-5 ms-3 text-sm font-medium text-white focus:outline-none bg-white/20 rounded-md hover:bg-white/25 cursor-pointer"
              >
                Cancel
              </button>
            </div>
          </form>
        </div>
      </div>
    </div>

    <button
      class="flex items-center justify-center gap-2 p-3 rounded-md bg-white/15 text-white text-sm font-medium cursor-pointer hover:bg-white/20 transition-colors"
    >
      <svg
        xmlns="http://www.w3.org/2000/svg"
        fill="none"
        viewBox="0 0 24 24"
        stroke-width="1.5"
        stroke="currentColor"
        class="size-4 text-white/70"
      >
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          d="m16.862 4.487 1.687-1.688a1.875 1.875 0 1 1 2.652 2.652L10.582 16.07a4.5 4.5 0 0 1-1.897 1.13L6 18l.8-2.685a4.5 4.5 0 0 1 1.13-1.897l8.932-8.931Zm0 0L19.5 7.125M18 14v4.75A2.25 2.25 0 0 1 15.75 21H5.25A2.25 2.25 0 0 1 3 18.75V8.25A2.25 2.25 0 0 1 5.25 6H10"
        />
      </svg>
      Rename
    </button>
    <button
      data-modal-target="default-modal"
      data-modal-toggle="default-modal"
      class="flex items-center justify-center gap-2 p-3 rounded-md bg-white/15 text-white text-sm font-medium cursor-pointer hover:bg-white/20 transition-colors"
    >
      <svg
        xmlns="http://www.w3.org/2000/svg"
        fill="none"
        viewBox="0 0 24 24"
        stroke-width="1.5"
        stroke="currentColor"
        class="size-4.5 text-white/70"
      >
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          d="M12 10.5v6m3-3H9m4.06-7.19-2.12-2.12a1.5 1.5 0 0 0-1.061-.44H4.5A2.25 2.25 0 0 0 2.25 6v12a2.25 2.25 0 0 0 2.25 2.25h15A2.25 2.25 0 0 0 21.75 18V9a2.25 2.25 0 0 0-2.25-2.25h-5.379a1.5 1.5 0 0 1-1.06-.44Z"
        />
      </svg>
      Create Folder
    </button>
    <button
      onclick="document.getElementById('fileInput').click()"
      class="flex items-center justify-center gap-2 p-3 rounded-md bg-primary text-white text-sm font-medium cursor-pointer hover:bg-secondary transition-colors"
    >
      <svg
        xmlns="http://www.w3.org/2000/svg"
        fill="none"
        viewBox="0 0 24 24"
        stroke-width="1.5"
        stroke="currentColor"
        class="size-4"
      >
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          d="M3 16.5v2.25A2.25 2.25 0 0 0 5.25 21h13.5A2.25 2.25 0 0 0 21 18.75V16.5m-13.5-9L12 3m0 0 4.5 4.5M12 3v13.5"
        />
      </svg>
      Upload File
    </button>
  </div>
</section>
