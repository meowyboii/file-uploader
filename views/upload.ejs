<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>File Upload</title>
    <link href="/styles.css" rel="stylesheet" />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css"
    />
    <link
      href="https://cdn.jsdelivr.net/npm/flowbite@3.1.2/dist/flowbite.min.css"
      rel="stylesheet"
    />
  </head>
  <body>
    <div class="flex flex-col items-center gap-4 p-7">
      <%- include('partials/actions') %> 
      <% if (folder.subfolders.length > 0 || folder.files.length > 0) { %>
        <!-- Subfolders and Files Display -->
        <div class="w-full max-w-4xl mt-10">
          <!-- Render Folders and Files -->
          <div class="mb-8">
            <div class="flex flex-wrap gap-4">
              <% folder.subfolders.forEach(subfolder => { %>
                <div class=" p-4 w-40 text-center ">
                  <button onclick="location.href='/upload/<%=subfolder.id%>'" class="cursor-pointer">
                  <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="size-30 text-primary">
                    <path d="M19.906 9c.382 0 .749.057 1.094.162V9a3 3 0 0 0-3-3h-3.879a.75.75 0 0 1-.53-.22L11.47 3.66A2.25 2.25 0 0 0 9.879 3H6a3 3 0 0 0-3 3v3.162A3.756 3.756 0 0 1 4.094 9h15.812ZM4.094 10.5a2.25 2.25 0 0 0-2.227 2.568l.857 6A2.25 2.25 0 0 0 4.951 21H19.05a2.25 2.25 0 0 0 2.227-1.932l.857-6a2.25 2.25 0 0 0-2.227-2.568H4.094Z" />
                  </svg>
                  
                  <h4 class="text-sm mb-2 line-clamp-4 break-all"><%= subfolder.name %></h4>
                  
                  </button>
                </div>
              <% }) %>
              <% folder.files.forEach(file => { %>
                <div class=" p-4 pt-8 w-40 text-center  ">
                  <button class="cursor-pointer">
                    <ion-icon name="document" class="text-8xl text-primary"></ion-icon>
                  
                  <h4 class="text-sm mb-2 line-clamp-4 break-all"><%= file.name %></h4>
                  
                  </button>
                </div>
              <% }) %>
            </div>
          </div>
      <% } %>
        <!-- File Upload Section -->
        <div
          class="border border-dashed border-gray-400 rounded-lg p-10 w-full max-w-md flex flex-col items-center justify-center cursor-pointer mt-15"
          onclick="document.getElementById('fileInput').click()"
          <% if (folder.subfolders.length > 0 || folder.files.length > 0) { %> hidden <% } %>
        >
          <i class="fas fa-cloud-upload-alt text-primary mb-4 text-7xl"></i>
          <p class="text-primary mb-4">Click to upload a file</p>
          <form
            action="/upload"
            method="post"
            enctype="multipart/form-data"
            class="w-full"
            id="uploadForm"
          >
            <input type="file" id="fileInput" class="hidden" name="file" />
            <input hidden name="folderId" value="<%= folder.id %>" />
            <p class="text-gray-400 text-xs text-center">(up to 10MB)</p>
          </form>
          <p class="text-gray-400 text-xs mt-8">
            PNG, JPEG, PDF, MP4, AVI, TXT are supported
          </p>
        </div>
      

    <script src="https://cdn.jsdelivr.net/npm/flowbite@3.1.2/dist/flowbite.min.js"></script>
    <script type="module" src="https://unpkg.com/ionicons@7.1.0/dist/ionicons/ionicons.esm.js"></script>
    <script nomodule src="https://unpkg.com/ionicons@7.1.0/dist/ionicons/ionicons.js"></script>
    <script>
      const fileInput = document.getElementById("fileInput");
      const form = document.getElementById("uploadForm");

      fileInput.addEventListener("change", async (event) => {
        if (fileInput.files.length > 0) {
          form.submit(); // Automatically submits the form
        }
      });
    </script>
  </body>
</html>
